{
  "name": "k3s-ci",
  "version": "0.0.2",
  "description": "K3S CI/CD",
  "main": "./dist/index.js",
  "repository": "https://github.com/thanhtunguet/k3s-ci",
  "author": "thanhtunguet <ht@thanhtunguet.info>",
  "license": "MIT",
  "private": false,
  "bin": {
    "k3s-ci": "./dist/index.js"
  },
  "alias": {
    "package.json": "./package.json",
    "src": "./src"
  },
  "scripts": {
    "watch": "NODE_ENV=development webpack --watch",
    "build": "NODE_ENV=production webpack",
    "start": "node .",
    "web:watch": "parcel watch src/web/index.html",
    "web:build": "parcel build src/web/index.html",
    "serve": "static dist/",
    "web": "run-p web:watch serve",
    "docker:build": "docker build -t thanhtunguet/k3s-ci:latest .",
    "prebuild": "rm -rf dist",
    "dockerize": "run-s build docker:build"
  },
  "devDependencies": {
    "@react-native-community/eslint-config": "^2.0.0",
    "@react3l/cli": "^1.0.1",
    "@types/codemirror": "^0.0.98",
    "@types/node": "^14.14.7",
    "@types/react": "^16.9.56",
    "@types/react-dom": "^16.9.9",
    "@types/ts-nameof": "^4.2.1",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "eslint": "^7.13.0",
    "node-loader": "^1.0.2",
    "node-static": "^0.7.11",
    "npm-run-all": "^4.1.5",
    "parcel": "^1.12.4",
    "react-codemirror2": "^7.2.1",
    "ts-loader": "^8.0.11",
    "ts-nameof": "^5.0.0",
    "typescript": "^4.0.5",
    "webpack": "^5.4.0",
    "webpack-cli": "^4.2.0"
  },
  "dependencies": {
    "antd": "^4.8.2",
    "bootstrap": "^4.5.3",
    "chalk": "^4.1.0",
    "codemirror": "^5.58.2",
    "commander": "^5.1.0",
    "dotenv": "^8.2.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "source-map-support": "^0.5.19",
    "uuid": "^8.3.1",
    "yaml": "^1.10.0"
  }
}